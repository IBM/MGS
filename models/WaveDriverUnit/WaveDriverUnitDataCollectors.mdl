#ifndef WAVEDRIVERUNITDATACOLLECTORS_MDL
#define WAVEDRIVERUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable WaveDriverUnitDataCollector
{
  string directory;
  string fileExt;
  int [] rows;
  int [] cols;
  int [] slices;
  int mxslice;
  double* [] waves;
  UserFunction getNodeIndices;
   
  // Flags
  bool op_saveWaves;
   
  Connection Pre Node () Expects OutputProducer
  {
    OutputProducer.output >> waves;
    getNodeIndices();
  }
 
  InitPhase initialize;
  TriggeredFunction dataCollection;
  FinalPhase finalize;
}

#endif
