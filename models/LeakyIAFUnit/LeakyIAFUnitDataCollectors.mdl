#ifndef LEAKYIAFUNITDATACOLLECTORS_MDL
#define LEAKYIAFUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable LeakyIAFUnitDataCollector
{
  string directory;
  string fileExt;
  int [] rows;
  int [] cols;
  int [] slices;
  int mxslice;
  float* [] voltages;
  bool* [] spikes;
  UserFunction getNodeIndices;
   
  // Flags
  bool op_saveVoltages;
  bool op_saveSpikes;
   
  Connection Pre Node () Expects VoltageIAFProducer, SpikeProducer
  {
    VoltageIAFProducer.voltage >> voltages;
    SpikeProducer.spike >> spikes;
    getNodeIndices();
  }
 
  InitPhase initialize;
  TriggeredFunction dataCollectionSpikes;
  TriggeredFunction dataCollectionOther;
  FinalPhase finalize;
}

#endif
