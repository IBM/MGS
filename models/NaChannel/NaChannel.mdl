#ifndef NaChannel_MDL
#define NaChannel_MDL

#include "../../nti/include/MaxComputeOrder.h"

#include "../std/std.mdl"
#include "../HodgkinHuxley/HodgkinHuxley.mdl"
#include "../BranchSolver/BranchSolver.mdl"

Node NaChannel Implements ConductanceArrayProducer, ReversalPotentialArrayProducer, BranchDataProducer {
  dyn_var_t [] m;
  dyn_var_t [] h;
  dyn_var_t [] g;
  dyn_var_t [] gbar;

  dyn_var_t []* V;//transmembrane voltage

  BranchDataStruct* branchData; 

  Shared {
    dyn_var_t* Na_IC;//[Na]_intracellular
    dyn_var_t* Na_EC;// [Na]_extracellular
    dyn_var_t* deltaT;
    dyn_var_t* T; // absolute temperature [K]
    dyn_var_t [] E_Na; //reversal potential
    InitPhase computeE_Na;
  }

  RuntimePhase update;
  InitPhase initializeNaChannels;

  ConductanceArrayProducer.conductanceArray << &g;
  ReversalPotentialArrayProducer.reversalPotentials << &Shared.E_Na;
  BranchDataProducer.branchData << branchData;

  InAttrPSet {
    string identifier;
    int idx;
  }

  Connection Pre Node (PSet.identifier=="compartment[Voltage]") Expects VoltageArrayProducer, BranchDataProducer {
    VoltageArrayProducer.voltageArray >> V;
    BranchDataProducer.branchData >> branchData;
 }

  Connection Pre Node (PSet.identifier=="IC[Voltage]") Expects NaConcentrationProducer {
    NaConcentrationProducer.Na >> Shared.Na_IC;
  }

  Connection Pre Constant (PSet.identifier=="EC") 
	Expects NaConcentrationProducer, TemperatureProducer {
    NaConcentrationProducer.Na >> Shared.Na_EC;
    TemperatureProducer.T >> Shared.T;
  }

  Connection Pre Constant (PSet.identifier=="dt") Expects TimeStepProducer {
    TimeStepProducer.deltaT >> Shared.deltaT;
  }
}

#endif
