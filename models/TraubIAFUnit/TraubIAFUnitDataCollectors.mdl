#ifndef TRAUBIAFUNITDATACOLLECTORS_MDL
#define TRAUBIAFUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"
#include "../HodgkinHuxley/HodgkinHuxley.mdl"

Variable TraubIAFUnitDataCollector
{
   string directory;
   string fileExt;
   int [] rows;
   int [] cols;
   int [] slices;
   int mxslice;
   double* [] voltages;
   double* [] thresholds;
   bool* [] spikes;
   float* [] spikevoltages;
   double* [] LFP_synapses;
   UserFunction getNodeIndices;

   // Where to save
   bool op_saveSpikesAll;
   int Xmin;
   int Xmax;
   int Ymin;
   int Ymax;
   int Zmin;
   int Zmax;
   
   // Flags
   bool op_saveVoltages;
   bool op_saveThresholds;
   bool op_saveSpikes;
   bool op_saveSpikeVoltages;
   bool op_saveLFPs;
   
   Connection Pre Node () Expects OutputProducer, ThresholdProducer,
     SpikeProducer, VoltageProducer, LFPProducer
   {
      OutputProducer.output >> voltages;
      ThresholdProducer.threshold >> thresholds;
      SpikeProducer.spike >> spikes;
      VoltageProducer.voltage >> spikevoltages;
      LFPProducer.LFP >> LFP_synapses;
      getNodeIndices();
   }
 
   InitPhase initialize;
   TriggeredFunction dataCollectionSpikes;
   TriggeredFunction dataCollectionOther;
   FinalPhase finalize;
}

#endif
