#ifndef SPINEIAFUNITDATACOLLECTORS_MDL
#define SPINEIAFUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable SpineIAFUnitDataCollector
{
  string directory;
  string filePrep;
  string fileApp;
  string fileExt;
  int [] rows;
  int [] cols;
  int [] slices;
  int mxslice;
  double* [] AMPAcurrent;
  double* [] mGluR5current;
  double* [] NMDARopen;
  double* [] NMDARCacurrent;
  double* [] Ca;
  double* [] eCB;
  UserFunction getNodeIndices;

  // Paramaters
  double eCBprodC; // eCB production function - steepness
  double eCBprodD; // eCB production function - shifts

  // Flags
  bool op_saveAMPA;
  bool op_savemGluR5;
  bool op_saveNMDARopen;
  bool op_saveNMDARCacurrent;
  bool op_saveCa;
  bool op_saveeCB;

  Connection Pre Node () Expects SynapticCurrentIAFProducer, CaIAFProducer, eCBIAFProducer
  {
    SynapticCurrentIAFProducer.AMPAcurrent >> AMPAcurrent;
    SynapticCurrentIAFProducer.mGluR5current >> mGluR5current;
    SynapticCurrentIAFProducer.NMDARopen >> NMDARopen;
    SynapticCurrentIAFProducer.NMDARCacurrent >> NMDARCacurrent;
    CaIAFProducer.Ca >> Ca;
    eCBIAFProducer.eCB >> eCB;
    getNodeIndices();
  }

  InitPhase initialize;
  TriggeredFunction dataCollection;
  FinalPhase finalize;
}

#endif
