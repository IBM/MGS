  int num_pulses_per_train;
  float intra_train_gap;  //[ms]
  //}}}

  dyn_var_t* deltaT;
  //}}}

  InitPhase initialize(I);
  RuntimePhase update(I);
  FinalPhase finalize();

  CurrentProducer.current << &I;
  Connection Pre Constant () Expects TimeStepProducer {
    TimeStepProducer.deltaT >> deltaT;
  }
  //}}}
}
