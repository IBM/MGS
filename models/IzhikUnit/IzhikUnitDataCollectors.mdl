#ifndef IZHIKUNITDATACOLLECTORS_MDL
#define IZHIKUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable IzhikUnitDataCollector
{
   string fileName;
   int [] rows;
   int [] cols;
   int mxcol;
   float* [] V;
   double* [] g;
   bool* [] spikes;   
   double deltaT;
   int maxoutnum;

   UserFunction getNodeIndices;

   Connection Pre Node () Expects OutputProducer, VoltageIAFProducer, SpikeProducer
   {
     SpikeProducer.spike >> spikes;
     OutputProducer.output >> g;
     VoltageIAFProducer.voltage >> V;
     getNodeIndices();
   }
 


   InitPhase initialize;
   TriggeredFunction dataCollection, dataCollectionSpike;
   FinalPhase finalize;
}

#endif
