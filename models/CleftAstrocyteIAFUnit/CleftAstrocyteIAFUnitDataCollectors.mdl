#ifndef CLEFTASTROCYTEIAFUNITDATACOLLECTORS_MDL
#define CLEFTASTROCYTEIAFUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable CleftAstrocyteIAFUnitDataCollector
{
  string directory;
  string filePrep;
  string fileApp;
  string fileExt;
  int [] rows;
  int [] cols;
  int [] slices;
  int mxslice;
  double* [] neurotransmitter;
  double* [] eCB;
  UserFunction getNodeIndices;
   
  // Flags
  bool op_saveNeurotransmitter;
  bool op_saveeCB;
  
  Connection Pre Node () Expects NeurotransmitterIAFProducer, eCBIAFProducer
  {
    NeurotransmitterIAFProducer.neurotransmitter >> neurotransmitter;
    eCBIAFProducer.eCB >> eCB;
    getNodeIndices();
  }
  
  InitPhase initialize;
  TriggeredFunction dataCollection;
  FinalPhase finalize;
}

#endif
