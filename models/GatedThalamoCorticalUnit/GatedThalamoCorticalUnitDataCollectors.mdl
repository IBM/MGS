#define GATEDTHALAMOCORTICALUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable GatedThalamoCorticalUnitDataCollector
{
   string fileName;
   string yfileName;
   int [] rows;
   int [] cols;
   int mxcol;
   double* [] vals;
   double* [] yvals;
   UserFunction getNodeIndices;
