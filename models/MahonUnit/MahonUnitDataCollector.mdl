Variable MahonUnitDataCollector
{
   string directory;
   string fileName;
   int [] rows;
   int [] cols;
   int mxcol;
   double* [] x1;
   double* [] x2;
   double* [] x3;
   bool* [] spikes;   
   double deltaT;
   int maxoutnum;
   

   UserFunction getNodeIndices;

   Connection Pre Node () Expects SpikeProducer, DataFeed
   {
     DataFeed.x1 >> x1;
     DataFeed.x2 >> x2;
     DataFeed.x3 >> x3;
     SpikeProducer.spike >> spikes;
     //     OutputProducer.output >> g;
     //VoltageProducer.voltage >> V;
     getNodeIndices();
   }
 


   InitPhase initialize;
   TriggeredFunction dataCollection, dataCollectionSpike, dataCollectionLFP;
   FinalPhase finalize;
}

