#ifndef FSIIAFUNITEXTRADATACOLLECTORS_MDL
#define FSIIAFUNITEXTRADATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable FSIIAFUnitExtraDataCollector
{
   string directory;
   string fileExt;
   int [] rows;
   int [] cols;
   int [] slices;
   int mxslice;
   float* [] voltages;
   double* [] thresholds;
   double* [] totalDriver;
   double* [] totalIPSC;
   double* [] totalGJ;
   UserFunction getNodeIndices;

   // Flags
   bool op_saveVoltages;
   bool op_saveThresholds;
   bool op_saveTotalDriver;
   bool op_saveTotalIPSC;
   bool op_saveTotalGJ;

   Connection Pre Node () Expects VoltageIAFProducer, ThresholdProducer, Output3Producer
   {
      VoltageIAFProducer.voltage >> voltages;
      ThresholdProducer.threshold >> thresholds;
      Output3Producer.output1 >> totalDriver;
      Output3Producer.output2 >> totalIPSC;
      Output3Producer.output3 >> totalGJ;
      getNodeIndices();
   }

   InitPhase initialize;
   TriggeredFunction dataCollection;
   FinalPhase finalize;
}

#endif
