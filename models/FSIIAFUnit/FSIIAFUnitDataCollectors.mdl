#ifndef FSIIAFUNITDATACOLLECTORS_MDL
#define FSIIAFUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable FSIIAFUnitDataCollector
{
   string directory;
   string fileExt;
   int [] rows;
   int [] cols;
   int [] slices;
   int mxslice;
   bool* [] spikes;
   UserFunction getNodeIndices;

   // Where to save
   bool op_saveSpikesAll;
   int Xmin;
   int Xmax;
   int Ymin;
   int Ymax;
   int Zmin;
   int Zmax;

   // Flags
   bool op_saveSpikes;

   Connection Pre Node () Expects SpikeProducer
   {
      SpikeProducer.spike >> spikes;
      getNodeIndices();
   }

   InitPhase initialize;
   TriggeredFunction dataCollection;
   FinalPhase finalize;
}

#endif
