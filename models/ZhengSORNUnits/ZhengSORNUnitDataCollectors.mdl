#ifndef ZHENGSORNUNITSDATACOLLECTORS_MDL
#define ZHENGSORNUNITSDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable ZhengSORNUnitDataCollector
{
   string directory;
   string fileName;
   string fileExt;
   int [] rows;
   int [] cols;
   int mxcol;
   bool* [] spikes;
   UserFunction getNodeIndices;
   double deltaT;
   bool op_saveSpikes;
   bool binary;
 
    Connection Pre Node () Expects SpikeProducer
   {
      SpikeProducer.spike >> spikes;
      getNodeIndices();
   }
 
   InitPhase initialize;
   TriggeredFunction dataCollection;
   FinalPhase finalize;
}

#endif
