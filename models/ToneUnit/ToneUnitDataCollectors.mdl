#ifndef TONEUNITDATACOLLECTORS_MDL
#define TONEUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable ToneUnitDataCollector
{
  string directory;
  string fileExt;
  int [] rows;
  int [] cols;
  int [] slices;
  int mxslice;
  double* [] tones;
  UserFunction getNodeIndices;
   
  // Flags
  bool op_saveTones;
   
  Connection Pre Node () Expects OutputProducer
  {
    OutputProducer.output >> tones;
    getNodeIndices();
  }
 
  InitPhase initialize;
  TriggeredFunction dataCollection;
  FinalPhase finalize;
}

#endif
