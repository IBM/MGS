#ifndef MIHALASNIEBURIAFUNITDATACOLLECTORS_MDL
#define MIHALASNIEBURIAFUNITDATACOLLECTORS_MDL
#include "../PointNeuronTools/PointNeuronTools.mdl"

Variable MihalasNieburIAFUnitDataCollector
{
   string fileName;
   int [] rows;
   int [] cols;
   int mxcol;
   double* [] voltages;
   double* [] thresholds;
   bool* [] spikes;
   UserFunction getNodeIndices;

   Connection Pre Node () Expects OutputProducer, ThresholdProducer, SpikeProducer
   {
      ThresholdProducer.threshold >> thresholds;
      SpikeProducer.spike >> spikes;
      getNodeIndices();
   }
 
   InitPhase initialize;
   TriggeredFunction dataCollection;
   FinalPhase finalize;
}

#endif

